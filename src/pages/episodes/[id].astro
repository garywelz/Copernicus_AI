import Layout from '../../layouts/Layout.astro';
import { getShowEpisodes } from '../../utils/spotify';
import type { SpotifyEpisode } from '../../utils/spotify';

export async function getStaticPaths() {
  const showId = import.meta.env.SPOTIFY_SHOW_ID;
  const episodes = await getShowEpisodes(showId);
  
  return episodes.map(episode => ({
    params: { id: episode.id.split(':')[2] },
    props: { episode },
  }));
}

interface Props {
  episode: SpotifyEpisode;
}

const { episode } = Astro.props;

